<section class="results">
  <h1>The results are in.</h1>
  <% if @vote.public? %>
    <h3>(<%= pluralize(@answers.count,"vote")%> so far)</h3>
  <% else %>
    <h3>(<%= participation_rate %> participation rate)</h3>
  <% end %>

  <% content_for :javascript do %>
      <%= render 'chart.js' %>
  <% end %>

  <canvas class="myChart"></canvas>

  <h4><%= icon('comment', 'Comments') %></h4>
  <% @answers.each do |a| %>
    <blockquote><%= a.comment %></blockquote>
  <% end %>
</section>
