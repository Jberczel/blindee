= minimal_form_for(@vote) do |f|
  = f.input :question
  = f.text_area :details, rows: 3, placeholder: "Add question details (optional)"
  = f.text_area :choices, rows: 5, placeholder: "Enter answers on each line..."
  %button.button{:type => "submit"}
    = icon('check', 'Create Vote')
  = f.input :public_vote, label: "Public Vote?"
