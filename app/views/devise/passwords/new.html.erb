<section class="pword-form">
  <h2>Forgot your password?</h2>

  <%= minimal_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.button :submit, "Send password" %>
  <% end %>
  
</section>