<div class="invite-form">
<h2>Invite Voters</h2>
<!-- controller: 'votes', action: 'invite' -->
<%= form_tag invite_vote_path do %>
<%= text_area_tag :invite_emails, nil, rows: 7, placeholder: "Enter e-mails separated by commas.  Or just copy and paste i.e. \n\n jeb springfield <jeb1912@email.com>, \n bart simpson <b_simpson@email.com>" %>


<button type="submit" classs="button">
  <%= icon('mail-forward', 'Send Invites') %>
</button>
<% end %>
</div>